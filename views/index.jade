        li
          a(href='/contact-us') Contact
      a.res-nav_click(href='#')
        i.fa-bars

  section#service.main-section.scrollspy
    .container
      each service in services.sort('title')
        h2= service.title
        h6= service.shortdesc

        .row
          .col-lg-4.col-sm-6.wow.fadeInLeft.delay-05s
            != service.html
            .clear
              p.text-right
                a(href=service.permalink, class="waves-effect waves-light grey darken-4 btn-large") Read More

          figure.col-lg-8.col-sm-6.text-right.wow.fadeInUp.delay-02s
            img(src= service.banner, alt='')

  section.main-section.alabaster.scrollspy
    .container
      each work in featuredwork.sort('title')
        .row
          figure.col-lg-5.col-sm-4.wow.fadeInLeft
            img(src= work.banner, alt='')
          .col-lg-7.col-sm-8.featured-work
            h2= work.title
            p(class="padding-b")= work.shortdesc

            != work.list

            .clear
            p.text-right.wow.fadeInRight.delay-07s
              a(href= work.permalink, class="waves-effect waves-light grey darken-4 btn-large") Read More

