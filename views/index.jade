extends layout

block append content


	section#service.main-section.scrollspy
		.container
			each service in services.sort('title')
				h2= service.title
				h6= service.shortdesc

				.row
					.col-lg-4.col-sm-6.wow.fadeInLeft.delay-05s
						!= service.html
						.clear
						p.text-right
							a(href=service.permalink, class="waves-effect waves-light grey darken-4 btn-large") Read More

					figure.col-lg-8.col-sm-6.text-right.wow.fadeInUp.delay-02s
						img(src= service.banner, alt='')

	section.main-section.alabaster.scrollspy
		.container
			each work in featuredwork.sort('title')
				.row
					figure.col-lg-5.col-sm-4.wow.fadeInLeft
						img(src= work.banner, alt='')
					.col-lg-7.col-sm-8.featured-work
						h2= work.title
						p(class="padding-b")= work.shortdesc

						!= work.html

						.clear
						p.text-right.wow.fadeInRight.delay-07s
							a(href= work.permalink, class="waves-effect waves-light grey darken-4 btn-large") Read More

	section#client_outer.main-section.scrollspy
			h2 Happy Clients
			.client_area
				.client_section.animated.fadeInUp.wow
					.client_profile
						.client_profile_pic
							img(src= records.client.data[0].image, alt='')
						h3= records.client.data[0].name
						span= records.client.data[0].work

					.quote_section
						.quote_arrow
						p
							b
								img(src='../img/quote_sign_left.png', alt='')
							p= records.client.data[0].comment
							small
								img(src='../img/quote_sign_right.png', alt='')
					.clear
				.client_section.animated.fadeInDown.wow
					.client_profile.flt
						.client_profile_pic
							img(src= records.client.data[1].image, alt='')
						h3= records.client.data[1].name
						span= records.client.data[1].work
					.quote_section.flt
						.quote_arrow2
						p
							b
								img(src='../img/quote_sign_left.png', alt='')
							p= records.client.data[1].comment
							small
								img(src='../img/quote_sign_right.png', alt='')
					.clear
	section#news.scrollspy
		.container
			h2.wow.fadeInUp.delay-0s Latest News
			h6 Proin iaculis purus consequat sem cure digni ssim.
			.row
				div.lazy-wrapper.wow.fadeInUp.delay-0s
					each newss in news.orderBy('date', 'asc').slice(0, 4)
						.col-sm-4.lazyItem
							.card
								.card-image.waves-effect.waves-block.waves-light
									img.activator(src= newss.banner)
								.card-content
									span.card-title.activator.grey-text.text-darken-4= newss.title
										i.material-icons.right more_vert
									date(date= newss.date)= newss.date
								.card-reveal
									span.card-title.grey-text.text-darken-4= newss.title
										i.material-icons.right close
									date(date= newss.date)= newss.date
									p= newss.shortdesc
									p.read-more
										a.btn.waves-effect.waves-light(href= newss.permalink) READ MORE

				.clear
	section#partners.scrollspy
		.container.wow.fadeIn.delay-0s
			h2  Our Partners
			h6  We're distributing millions of dollars every week to campaigners around the world.<br> Whether you're raising 500 dollars or 5 million euros.
			.row
				.col-lg-12
					ul#partner-list
						- each partner in records.partners.data
								li.wow.zoomIn
									figure
										a(href= partner.website)
											img(alt='', src= partner.logo)


